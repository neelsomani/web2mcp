{
  "server": {
    "name": "email-mcp-server",
    "version": "0.1.0"
  },
  "tools": [
    {
      "name": "list_emails",
      "description": "List emails with optional filters",
      "input_schema": {
        "type": "object",
        "properties": {
          "starred": { "type": "boolean", "description": "If true, return only starred emails; if omitted or false, return all emails" }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "name": "search_emails",
      "description": "Search emails by text query",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "Search query text" }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    },
    {
      "name": "send_email",
      "description": "Send an email",
      "input_schema": {
        "type": "object",
        "properties": {
          "subject": { "type": "string", "description": "Email subject" },
          "body": { "type": "string", "description": "Email body text" }
        },
        "required": ["subject", "body"],
        "additionalProperties": false
      }
    }
  ]
}